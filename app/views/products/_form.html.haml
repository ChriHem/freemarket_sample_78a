= form_with model: @product, local: true do |f|
  %table
    %tbody
      %tr
        %th
          -# = f.label :name, “商品名”
          = f.label :name, "商品名（必須）"
        %td
          = f.text_field :name
      %tr
        %th
          = f.label :introduce, "商品説明"
        %td
          = f.text_field :introduce
      %tr
        %th
          = f.label :price, "価格"
        %td
          = f.text_field :price
    = f.fields_for :images do |i|
      = i.file_field :image
  %br
  = f.submit '登録'