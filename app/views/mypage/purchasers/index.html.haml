.Pan
  - breadcrumb :purchasers
  = render "layouts/breadcrumbs"
.MyPage
  = render "items/sidebar"

  .MyPage__MainField
    .MyPage__MainField__Title
      購入した商品
    .ListingMenu
      %ul.ListingMenu__Tab
        = link_to "#", class: "menu_item no-underline  active" do
          %li 取引中
        = link_to "#", class: "menu_item no-underline" do
          %li 過去の取引
      %ul.Contents
        %li.Content.show
          %table.ProductsList
            %tbody
              - @buyer_products.each do |buy|
                - if buy.product.sold_out_flg == 1
                  %tr
                    %th
                      = link_to product_path(buy.product_id), class: 'no-underline' do
                        = image_tag buy.product.images[0].image_url, class: 'product_image'
                    %td{valign: "top"}
                      = link_to product_path(buy.product_id), class: 'link_color no-underline' do
                        = "商品名：#{buy.product.name}"

        %li.Content
          %table.ProductsList
            %tbody
              - @buyer_products.each do |buy|
                - if buy.product.sold_out_flg == 2
                  %tr
                    %th
                      = link_to product_path(buy.product_id), class: 'no-underline' do
                        = image_tag buy.product.images[0].image_url, class: 'product_image'
                    %td{valign: "top"}
                      = link_to product_path(buy.product_id), class: 'link_color no-underline' do
                        = "商品名：#{buy.product.name}"