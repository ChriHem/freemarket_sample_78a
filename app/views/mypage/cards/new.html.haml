.Pan
  - breadcrumb :cards_new
  = render "layouts/breadcrumbs"
.MyPage
  = render "items/sidebar"

  .MyPage__MainField
    .MyPage__MainField__Title
      クレジットカード情報入力
      %hr
    .BodyCard
      .BodyCard__inner
        = form_tag(mypage_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .CardBox
            .CardBox--ele
              %label.label カード番号
              %span 必須
            .CardBox--ele.number
              = text_field_tag 'payment_card_no', "", class: 'input-text', id: "payment_card_no", placeholder: '半角数字のみ', type: "text", maxlength: "16"
            .CardBox--ele
              = image_tag ('cards/visa.svg'), class: 'card_image'
              = image_tag ('cards/master-card.svg'), class: 'card_image'
              = image_tag ('cards/saison-card.svg'), class: 'card_image'
              = image_tag ('cards/jcb.svg'), class: 'card_image'
              = image_tag ('cards/american_express.svg'), class: 'card_image'
              = image_tag ('cards/dinersclub.svg'), class: 'card_image'
              = image_tag ('cards/discover.svg'), class: 'card_image'

          .CardBox
            .CardBox--ele
              %label.label 有効期限
              %span 必須
            .CardBox--ele
              %select#payment_card_month.input-select{name: "payment_card_month", type: "text"}
                %option{value: "1"} 01
                %option{value: "2"} 02
                %option{value: "3"} 03
                %option{value: "4"} 04
                %option{value: "5"} 05
                %option{value: "6"} 06
                %option{value: "7"} 07
                %option{value: "8"} 08
                %option{value: "9"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              月
              %select#payment_card_year.input-select{name: "payment_card_year", type: "text"}
                %option{value: "2020"} 20
                %option{value: "2021"} 21
                %option{value: "2022"} 22
                %option{value: "2023"} 23
                %option{value: "2024"} 24
                %option{value: "2025"} 25
                %option{value: "2026"} 26
                %option{value: "2027"} 27
                %option{value: "2028"} 28
                %option{value: "2029"} 29
                %option{value: "2030"} 30
              年
          .CardBox
            .CardBox--ele
              %label.label セキュリティコード
              %span 必須
            .CardBox--ele
              = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'input-text', id: "payment_card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号'
          .BodyCard__inner--btn
            = submit_tag '追加する', class: 'Button', id: 'token_submit'

