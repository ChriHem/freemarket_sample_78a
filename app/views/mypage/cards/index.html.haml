.MyPage
  = render "items/sidebar"

  .MyPage__MainField
    .MyPage__MainField__Title
      クレジットカード情報
      %hr
    .BodyCard
      .BodyCard__Info
        - if !@card.blank?
          - exp_month = @customer_card.exp_month.to_s
          - exp_year = @customer_card.exp_year.to_s.slice(2,3)
          %table.BodyCard__Info--table
            %tbody
              %tr
                %td
                  = image_tag ('cards/visa.svg'), class: 'card_image'
                  %br
                  カード番号：
                  = "**** **** **** " + @customer_card.last4
                  %br
                  有効期限　：
                  = exp_month + " / " + exp_year
                %td
                  = link_to "削除する", mypage_card_path(@card.id), method: :delete, class: 'btn-small'

      .BodyCard--btn
        = link_to "クレジットカードを追加する", new_mypage_card_path, class: 'Button'
